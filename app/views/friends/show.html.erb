<div id= "show-friends"class="contain">
  <h1 class='text-center'> Découvre - moi  </h1>

  <h2> <%= @friend.first_name%> - <%= @friend.last_name%> </h2>
  <h3> <%= @friend.age %> ans - <%= @friend.gender%></h3>
  <h4> <%= @friend.address %></h4>
  <p class="contain"> <%= @friend.description %></p>
  <h2> <%= @friend.price %> € /heure </h2>

  <%= link_to'On se capte ?  ' , new_friend_booking_path(@friend), class: "cbtn" %>
  <%= link_to'Pas convaincu ?', friends_path(@friend), class: "cbtn" %>
  <%= link_to'Le Boss  ', user_path(@friend.user), class: "cbtn" %>

  <% if @friend.user == current_user %>
    <%= link_to'Supprimer', friend_path(@friend), method: :delete,data: { confirm: "Voulez-vous vraiment annuler cet ami ?" }, class: "cbtn" %>
  <% end %>
</div>

